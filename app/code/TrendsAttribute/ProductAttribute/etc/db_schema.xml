        <column xsi:type="int" name="id" padding="10" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="review" length="20" nullable="false" comment="Review"/>
        -
        <column xsi:type="int" name="ratings" length="20" nullable="false" comment="Ratings"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>