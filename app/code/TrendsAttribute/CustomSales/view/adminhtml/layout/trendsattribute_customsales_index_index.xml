<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceContainer name="content">
            <block class="TrendsAttribute\CustomSales\Block\Adminhtml\Post" name="trendsattribute_post_grid">
                <block class="Magento\Backend\Block\Widget\Grid" name="trendsattribute_post_grid.grid" as="grid">
                    <block class="Magento\Backend\Block\Widget\Grid\Massaction" name="trendsattribute.customsales.massaction" as="grid.massaction">
                        <arguments>
                            <argument name="massaction_id_field" xsi:type="string">entity_id</argument>
                            <argument name="form_field_name" xsi:type="string">ids</argument>
                            <argument name="use_select_all" xsi:type="string">1</argument>
                            <argument name="options" xsi:type="array">
                                <item name="disable" xsi:type="array">
                                    <item name="label" xsi:type="string" translate="true">Delete</item>
                                    <item name="url" xsi:type="string">*/*/massdelete</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                    <arguments>
                        <argument name="id" xsi:type="string">entity_id</argument>
                        <argument name="dataSource" xsi:type="object">TrendsAttribute\CustomSales\Model\ResourceModel\Post\Collection</argument>
                        <argument name="default_sort" xsi:type="string">entity_id</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="trendsattribute_post_grid.grid.columnSet" as="grid.columnSet">
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="item_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Item Id</argument>
                                <argument name="index" xsi:type="string">item_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="increment_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Order Id</argument>
                                <argument name="index" xsi:type="string">increment_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="customer_email">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Customer Email</argument>
                                <argument name="index" xsi:type="string">customer_email</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="sku">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Product SKU</argument>
                                <argument name="index" xsi:type="string">sku</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="clothing_material">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Clothing Material</argument>
                                <argument name="index" xsi:type="string">clothing_material</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="change_status">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Change Status</argument>
                                <argument name="index" xsi:type="string">change_status</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>