<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="flash_sale" resource="default" engine="innodb" comment="Flash Sale">
        <column xsi:type="int" name="flash_sale_id" padding="11" unsigned="true" nullable="false" identity="true" comment="Flash Sale ID"/>
        <column xsi:type="varchar" name="flash_sale_name" nullable="false" length="50" comment="Flash Sale Name"/>
        <column xsi:type="datetime" name="start_datetime" nullable="false" comment="Start Date Time"/>
        <column xsi:type="datetime" name="end_datetime" nullable="false" comment="End Date Time"/>
        <column xsi:type="int" name="discount_percent" unsigned="true" nullable="false" comment="Discount Percentage"/>
        <column xsi:type="decimal" name="max_discount_amount" scale="2" precision="5" unsigned="true" nullable="false" comment="Price"/>
        <column xsi:type="smallint" name="is_active" padding="5" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="flash_sale_id"/>
        </constraint>
    </table>

    <table name="flash_sale_item" resource="default" engine="innodb" comment="Flash Sale Item">
        <column xsi:type="int" name="flash_sale_item_id" padding="11" unsigned="true" nullable="false" identity="true" comment="Flash Sale Item ID"/>
        <column xsi:type="int" name="flash_sale_id" padding="11" unsigned="true" nullable="false" comment="Flash Sale ID"/>
        <column xsi:type="varchar" name="sku" nullable="true" length="255" comment="SKU"/>
        <column xsi:type="int" name="qty" unsigned="true" nullable="false" comment="Quantity"/>
        <column xsi:type="int" name="qty_left" unsigned="true" nullable="false" comment="Quantity Left"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="flash_sale_item_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FLASH_SALE_ID" table="flash_sale_item" column="flash_sale_id" referenceTable="flash_sale" referenceColumn="flash_sale_id" onDelete="CASCADE"/>
    </table>

    <table name="sales_order" resource="default" engine="innodb" comment="Sales Order">
        <column xsi:type="smallint" name="is_flashsale" unsigned="true" nullable="false" default="0" comment="Is Flash Sale"/>
    </table>
</schema>